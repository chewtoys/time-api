version: '3.0'

services:
    lt_nodejs:
        build: docker/nodejs
        restart: always
        container_name: lt_nodejs
        volumes:
            - ./app:/var/www/lazy-tile-api/app
        stdin_open: true
        tty: true

    lt_nginx:
        build: docker/nginx
        restart: always
        volumes:
            - ./app:/var/www/lazy-tile-api/app
